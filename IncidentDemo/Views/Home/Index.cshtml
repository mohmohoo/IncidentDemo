@model IEnumerable<IncidentDemo.Models.Incident>
@{
    ViewBag.Title = "List";
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Description</th>
            <th>Person Involved</th>
            <th>Happened At</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)<br />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonInvolved)<br />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HappenedAt)<br />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit")<br />
            </td>
            <td>
                <button
                       class="btn btn-danger"
                       value="Delete" 
                       onclick="location.href='@Url.Action("Delete", "Home", new { incident = item })'" >
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></button>
            </td>
        </tr>
    }
</table>
